@model IEnumerable<Book>

@{
    ViewData["Title"] = "Books";
}

<h1>Library Books</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Book</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.Category</td>

                <td>
                    @if (item.IsAvailable)
                    {
                        <span class="text-success fw-bold">Available</span>
                    }
                    else
                    {
                        <span class="text-danger fw-bold">Not Available</span>
                    }
                </td>

                <td>
                    @if (item.IsAvailable)
                    {
                        <a asp-controller="Borrows"
                           asp-action="BorrowBook"
                           asp-route-bookId="@item.Id"
                           class="btn btn-success btn-sm">
                            Borrow
                        </a>
                    }

                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
